<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/review_profile_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_margin="24dp"
        android:src="@drawable/ic_profile_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="#52368C"
        android:textSize="15sp"
        android:lineSpacingExtra="3sp"
        app:layout_constraintBottom_toBottomOf="@+id/review_profile_image"
        app:layout_constraintStart_toEndOf="@+id/review_profile_image"
        app:layout_constraintTop_toTopOf="@id/review_profile_image"
        tools:text="Marko Dodig"/>

    <ImageView
        android:id="@+id/review_star"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="@id/review_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/review_profile_image"/>

    <TextView
        android:id="@+id/review_text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="#52368C"
        app:layout_constraintBottom_toBottomOf="@id/review_profile_image"
        app:layout_constraintEnd_toEndOf="@id/review_star"
        app:layout_constraintTop_toTopOf="@id/review_profile_image"
        tools:text="3"/>

    <TextView
        android:id="@+id/review_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_profile_image"
        tools:text="@string/sample_text"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_text_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>